<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<converter>
		<converter-for-class>java.lang.Enum</converter-for-class>
		<converter-class>javax.faces.convert.EnumConverter</converter-class>
	</converter>

	<application>
		<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
	</application>


	<application>
		<locale-config>
			<default-locale>tr_TR</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>com.izibiz.training.locale.messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<message-bundle>com.izibiz.training.locale.messages</message-bundle>
	</application>


</faces-config>
